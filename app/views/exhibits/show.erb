<!DOCTYPE html>
  <html class="no-js" lang="en">
    <head>
      <meta charset="utf-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
      <title></title>
      <link rel="stylesheet" href="/stylesheets/subpages.css" />
    </head>
    <body>
        <div class="form">

          <p> <%=@exhibit.title.upcase%> </p>
          <p> <%=@exhibit.deadline.upcase%> </p>
          <p> <%=@exhibit.medium.upcase%> </p>
          <p> <%=@exhibit.exhibit_date.upcase%> </p>
          <p> <%=@exhibit.location.upcase%> </p>
          <p> <%=@exhibit.entry_fee.upcase%> </p>
          <br>
          <a href="/exhibits">All Exhibits</a>
          <a href="/exhibits/new">Add New</a>
          <% if logged_in? && @exhibit.user == current_user %>
          <p><a href="/exhibits/<%= @exhibit.id %>/edit">Edit</a></p>
          <form method="POST" action="/exhibits/<%= @exhibit.id %>">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" name="" value="Delete">
            <% end %>
          </form>
        </div>

      </body>
    </html>
